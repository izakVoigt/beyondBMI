{
  "name": "api",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "/apps/api/src",
  "projectType": "application",
  "tags": ["platform:server", "scope:app", "type:api"],
  "targets": {
    "build": {
      "executor": "@nx/esbuild:esbuild",
      "options": {
        "assets": ["{projectRoot}/src/assets"],
        "bundle": true,
        "format": ["cjs"],
        "generatePackageJson": true,
        "main": "{projectRoot}/src/main.ts",
        "outputPath": "dist/apps/api",
        "platform": "node",
        "sourcemap": true,
        "tsConfig": "{projectRoot}/tsconfig.app.json"
      },
      "outputs": ["{options.outputPath}"]
    },
    "serve": {
      "configurations": {
        "development": {
          "buildTarget": "api:build:development"
        },
        "production": {
          "buildTarget": "api:build:production"
        }
      },
      "continuous": true,
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "api:build",
        "runBuildTargetDependencies": false
      }
    },
    "lint": {
      "configurations": {
        "fix": {
          "fix": true
        }
      },
      "executor": "@nx/eslint:lint",
      "options": {
        "fix": false,
        "lintFilePatterns": ["{projectRoot}"]
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit --project {projectRoot}/tsconfig.json"
      }
    },
    "test-unit": {
      "executor": "@nx/jest:jest",
      "options": {
        "ci": true,
        "codeCoverage": true,
        "coverageDirectory": "{workspaceRoot}/coverage/unit/{projectRoot}",
        "jestConfig": "{projectRoot}/jest.unit.config.ts",
        "passWithNoTests": true,
        "testPathPatterns": ["\\.unit\\.test\\.[tj]sx?$"]
      }
    }
  }
}
